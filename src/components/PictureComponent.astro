---
import type { ImageMetadata } from 'astro';
import { getImage } from 'astro:assets';

export interface Props {
	src: string;
	alt: string;
	class?: string;
	'transition:name'?: string;
	mobileImgUrl?: string;
	desktopImgUrl?: string;
	loading?: 'eager' | 'lazy';
	className?: string;
}
const { mobileImgUrl, desktopImgUrl, className, loading, alt } = Astro.props;

const mobileImgWebp = await getImage({ src: mobileImgUrl, format: 'webp' });
const mobileImgAvif = await getImage({ src: mobileImgUrl, format: 'avif' });
const desktopImgWebp = await getImage({ src: desktopImgUrl, format: 'webp' });
const desktopImgAvif = await getImage({ src: desktopImgUrl, format: 'avif' });
---

<picture>
	<source type="image/avif" media="(max-width: 800px)" srcset={mobileImgAvif.src} />
	<source type="image/webp" media="(max-width: 800px)" srcset={mobileImgWebp.src} />
	<source type="image/avif" media="(min-width: 801px)" srcset={desktopImgAvif.src} />
	<source type="image/webp" media="(min-width: 801px)" srcset={desktopImgWebp.src} />
	<img src={desktopImgWebp.src} class={className} loading={loading} alt={alt} width={desktopImgWebp.attributes.width} height={desktopImgWebp.attributes.height} />
</picture>
