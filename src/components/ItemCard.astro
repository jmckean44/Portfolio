---
import type { Item } from '../data';

interface Props {
	item: Item;
}

const { item } = Astro.props;
const transitionName = item.slug;
---

<a href={`/${item.slug}`} class="work-thumbs">
	<div>
		<img src={item.image} alt={item.name} transition:name={`${transitionName} image`} class="work-img" />
	</div>
	<div>
		<h2 transition:name={`${transitionName} title`}>
			{item.name}
		</h2>
	</div>
</a>

<style>
	a {
		flex: 1 1 400px;
		background: #f5f5f5;
		border-radius: 3px;
		padding: 1rem;
		margin-top: 0;
		text-decoration: none !important;
	}
	@media (max-width: 600px) {
		a {
			flex: 1 1 auto;
			padding: 1rem 1rem 1.25rem;
		}
	}

	h2 {
		font-size: min(max(1.25rem, 2vw), 24px);
		margin-top: 1.5rem;
		margin-bottom: 0;
	}
	.work-img {
		border-radius: 3px;
	}
	.work-thumbs {
		/* max-width: 440px; */
	}
</style>
