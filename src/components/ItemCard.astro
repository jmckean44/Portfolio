---
import type { Item } from '../data';

interface Props {
	item: Item;
}

const { item } = Astro.props;
const transitionName = item.slug;
---

<a href={`/${item.slug}`} data-category={item.type} class="site">
	<div>
		<img src={item.image} alt={item.name} transition:name={`${transitionName} image`} class="image" />
	</div>
	<div>
		<h2 transition:name={`${transitionName} title`}>
			{item.name}
		</h2>
	</div>
</a>

<style>
	a {
		flex: 1 1 20%;
		max-width: 50%;
		background: #f5f5f5;
		border-radius: 3px;
		padding: 1rem;
		margin-top: 0;
		text-decoration: none !important;
	}

	h2 {
		font-size: min(max(1rem, 3vw), 24px);
		margin-top: 1.2rem;
		margin-bottom: 0.2rem;
	}
	.image {
		border-radius: 3px;
	}

	@media (max-width: 1000px) {
		a {
			flex: 1 1 30%;
		}
	}

	@media (max-width: 700px) {
		a {
			flex: 1 1 40%;
		}
	}

	@media (max-width: 500px) {
		a {
			padding: 0.5rem;
		}
	}

	@media (max-width: 350px) {
		a {
			padding: 0;
			background: #fff;
		}
		h2 {
			text-align: center;
			margin-top: 0.5rem;
			margin-bottom: 1rem;
		}
		img {
			border: 1px #ccc solid;
		}
	}
</style>
