---
import type { Item } from '../data';

interface Props {
	item: Item;
}

const { item } = Astro.props;
const transitionName = item.slug;
---

<a href={`/${item.slug}`} data-category={item.type} class="site">
	<div>
		<img src={item.image} alt={item.name} transition:name={`${transitionName} image`} class="image" />
	</div>
	<div>
		<h2 transition:name={`${transitionName} title`}>
			{item.name}
		</h2>
	</div>
</a>

<style>
	a {
		flex: 0 1 auto;
		width: 33.3333%;
		border-radius: 3px;
		padding: 0.75rem;
		margin-top: 0;
		text-decoration: none !important;
		border: 0px #fff solid;
		/* box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); */
	}

	h2 {
		font-size: min(max(2rem, 2.5vw), 22px);
		margin-top: 0.75rem;
		margin-bottom: 1rem;
	}
	.image {
		border-radius: 3px;
		border: 1px #f2f2f2 solid;
	}

	@media (max-width: 1050px) {
		a {
			flex: 1 1 auto;
			width: 50%;
			max-width: 50%;
		}
	}

	/* @media (max-width: 800px) {
		a {
			max-width: 50%;
			padding: 0.75rem;
		}
	} */

	@media (max-width: 400px) {
		a {
			flex: 1 1 100%;
			max-width: 100%;
			width: 100%;
			padding: 0;
		}
		h2 {
			text-align: center;
			margin-top: 0.5rem;
			margin-bottom: 2.5rem;
		}
	}
</style>
