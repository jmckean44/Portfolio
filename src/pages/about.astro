			delay: 5000,
			effect: 'fade',
			pagination: {
				pagination: '.swiper-pagination-h',
				el: '.swiper-pagination-h',
				clickable: true,
				renderBullet: function (index: number, className: string) {
					return '<span class="' + className + '">' + direction[index] + '</span>';
				},
			},
		});

		var swiper = new Swiper('.examples', {
			mousewheel: true,
			keyboard: true,
			autoplay: true,
			speed: 1000,
			delay: 50000,
			effect: 'fade',
			autoHeight: true,
		});

		// IMAGES
		var floor = ['Portraits', 'Landscape', 'Drawings'];
		var direction = ['', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', ''];

		var swiperV = new Swiper('.swiper-container-v', {
			pagination: {
				el: '.swiper-pagination-v',
				clickable: true,
				autoHeight: true,
				renderBullet: function (index: number, className: string) {
					return '<span class="' + className + '">' + floor[index] + '</span>';
				},
			},
			speed: 1000,
			direction: 'vertical',
			autoHeight: true,
			spaceBetween: 0,
		});

		var swiperH = new Swiper('.swiper-container-h', {
			lazy: true,
			pagination: {
				pagination: '.swiper-pagination-h',
				el: '.swiper-pagination-h',
				clickable: true,
				//autoHeight: true,
				renderBullet: function (index: number, className: string) {
					return '<span class="' + className + '">' + direction[index] + '</span>';
				},
			},
			speed: 1000,
			//autoplay: true,

			direction: 'horizontal',
			effect: 'fade',
			spaceBetween: 0,
			nested: true,
		});
	</script>
