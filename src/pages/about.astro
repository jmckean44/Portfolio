	<section>
		<div class="container border-container books">
			<div class="flex padding-x align-middle borders">
				<div class="cell small-18 medium-9">
					<h1>Favourite Books</h1>
					<p>Coming soon.</p>
				</div>
				<div class="cell small-18 medium-9"></div>
			</div>
		</div>
	</section>

	<style>
		:root {
			#mining .swiper-slide {
				background: #f9f9f9 !important;
			}
			#mining .swiper-slide p {
				padding: 1.5rem 0 0;
			}
			.swiper-pagination {
				bottom: -25px !important;
			}
			.swiper-pagination-bullet-active {
				background: #ff9000;
			}
			#slideshow-container .swiper {
				display: flex;
				flex-direction: column;
				align-items: center;
				background: #f9f9f9;
			}
			#slideshow-container .swiper-slide {
				margin-bottom: 50px !important; /* For vertical Swiper */
				margin-right: 50px !important; /* For horizontal Swiper */
			}
			#slideshow-container .swiper-slide p {
				padding-right: 10px;
				margin-top: -25px;
				text-align: right;
			}
			#slideshow-container #landscapes .swiper-slide p {
				padding-right: 10px;
				margin-top: 25px;
			}
			.books {
				max-width: 1200px;
			}
			#pollock {
				text-align: center;
			}
			#pollock img {
				max-width: 300px;
			}
		}
	</style>

	<!-- Swiper JS -->
	<link rel="stylesheet" href="../src/styles/swiper-bundle.min.css" />
	<script is:inline src="../src/scripts/swiper.js"></script>

	<script>
		document.addEventListener('astro:page-load', () => {
			new Swiper('.elink', {
				mousewheel: true,
				keyboard: true,
				autoplay: true,
				speed: 1000,
				delay: 5000,
				effect: 'fade',
				pagination: {
					el: '.swiper-pagination',
					renderBullet: function (className: string) {
						return '<span class="' + className + '"></span>';
					},
					clickable: true,
				},
			});

			// IMAGES
			var floor = ['Drawings', 'Portraits', 'Landscape'];
			var direction = ['', '', '', '', '', '', '', '', '', '', '', '', '', '', '', '', ''];

			new Swiper('.swiper-container-v', {
				pagination: {
					el: '.swiper-pagination-v',
					clickable: true,
					autoHeight: true,
					renderBullet: function (index: number, className: string) {
						return '<span class="' + className + '">' + floor[index] + '</span>';
					},
				},
				lazy: true,
				speed: 1000,
				direction: 'vertical',
				autoHeight: false,
				spaceBetween: 50,
			});

			new Swiper('.swiper-container-h', {
				lazy: true,
				pagination: {
					pagination: '.swiper-pagination-h',
					el: '.swiper-pagination-h',
					clickable: true,
					autoHeight: true,
					renderBullet: function (index: number, className: string) {
						return '<span class="' + className + '">' + direction[index] + '</span>';
					},
				},
				speed: 1000,
				direction: 'horizontal',
				effect: 'fade',
				spaceBetween: 50,
				autoplay: true,
				autoHeight: false,
				nested: true,
			});
		});
	</script>
</Layout>
